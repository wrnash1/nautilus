# Nautilus Environment Configuration for Docker/Podman
# Copy this file to .env when running in containers
# DO NOT commit .env to git (it's in .gitignore)

# Application Settings
APP_NAME="Nautilus Dive Shop"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=America/Chicago

# Database Connection (for Docker containers)
# Use 'database' as hostname (the container name from docker-compose.yml)
DB_HOST=database
DB_PORT=3306
DB_DATABASE=nautilus
DB_USERNAME=root
DB_PASSWORD=Frogman09!

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file

# Mail Configuration (optional for development)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@nautilus.local
MAIL_FROM_NAME="Nautilus Dive Shop"

# Stripe (optional - for payment testing)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Other Settings
BACKUP_ENABLED=true
BACKUP_PATH=/var/www/html/storage/backups
